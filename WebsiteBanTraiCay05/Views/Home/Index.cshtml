                    <div class="service-item bg-primary rounded border border-primary">
                        <img src="~/Content/assets/img/featur-3.jpg" class="img-fluid rounded-top w-100" alt="">
                        <div class="px-4 rounded-bottom">
                            <div class="service-content bg-secondary text-center p-4 rounded">
                                <h5 class="text-white">Rau lạ</h5>
                                <h3 class="mb-0">Giảm giá 30k</h3>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Featurs End -->
