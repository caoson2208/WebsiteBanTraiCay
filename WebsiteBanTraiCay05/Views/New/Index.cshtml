@model PagedList.PagedList<WebsiteBanTraiCay05.Models.EF.New>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /*** Pagination Start ***/
    .pagination li {
        text-decoration: none;
        transition: 0.5s;
        margin: 0 4px;
        border-radius: 10px !important;
        border: 1px solid var(--bs-secondary);
    }

        .pagination li:not(:active):hover,
        .pagination li.active {
            background-color: var(--bs-primary);
            color: var(--bs-light);
            border: 1px solid var(--bs-secondary);
        }

        .pagination li a {
            border: none;
            border-radius: 10px !important;
            padding: 10px 20px;
            display: block;
        }
    /*** Pagination End ***/
</style>
<div class="container" style="margin-top: 180px;">
    <div class="row">
        <div class="col-md-12">
            <h1 class="border-bottom mb-5 pt-3">Tin tức</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row mb-4">
                <div class="col-md-3">
                    <div>
                        <a href="" title="@item.Title"><img src="@item.Image" class="w-100" height="200" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content">
                        <h3><a href="/@item.Alias-n@(item.Id)" title="@item.Title" class="text-dark">@item.Title</a></h3>
                        <div>
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div class="pagination d-flex justify-content-center mt-5">
                    @Html.PagedListPager(Model,
                        page => Url.Action("Index", new { page }),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "rounded" },
                            UlElementClasses = new[] { "pagination", "d-flex", "justify-content-center", "mt-5" },
                            LinkToPreviousPageFormat = "&laquo;",
                            LinkToNextPageFormat = "&raquo;"
                        })
                </div>
            </div>
        </div>
    }
</div>


