@model WebsiteBanTraiCay05.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="container" style="margin-top: 200px">
    <hr />
    <div class="row">
        <div class="col-md-12 rounded" style="margin: 0 auto; width: 40%; padding: 40px 0 30px 80px; box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;">
            <h2 class="w-75 mb-5 text-center">@ViewBag.Title</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="mb-1 ml-1" for="Email">Email</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label class="mb-1 ml-1" for="Password">Mật khẩu</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label class="mb-1 ml-1" for="ConfirmPassword">Nhập lại mật khẩu</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group mt-2 mb-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng ký" class="btn btn-primary border-0 border-secondary py-2 px-4 rounded text-white mt-4 w-100" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Đăng nhập", "Login")
                </p>
            }
        </div>
    </div>
</div>